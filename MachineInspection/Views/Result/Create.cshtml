@model MachineInspection.Application.DTO.ResultCreateViewDto

@{
    ViewData["Title"] = "Create Result";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px;">
        <h3 class="text-center mb-4">Create Result</h3>

        <form asp-action="Create" asp-controller="Result" method="post">
            <div class="mb-3">
                <label asp-for="machineId" class="form-label fw-semibold">Machine</label>
                <select asp-for="machineId" class="form-select" asp-items="Model.machineList">
                    <option value="">-- Select Machine --</option>
                </select>
                <span asp-validation-for="machineId" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">Simpan</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
