@model List<MachineInspection.Application.DTO.ResultDto>
@{
    ViewData["Title"] = "Result List";
    int Index = 1;
}

<div class="container">
    <h2 class="text-start mb-3">Sheet List</h2>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <!-- Button Create -->
        <a asp-controller="Result" asp-action="Create" class="btn btn-primary">+ Create Sheet</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>No</th>
                <th>Machine</th>
                <th>Status</th>
                <th>Date</th>
                <th>User</th>
                <th>Bu</th>
                <th>Action </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var result in Model)
                {
                    <tr>
                        <td>@Index</td>
                        <td>@result.machineId</td>
                        <td>@result.status</td>
                        <td>@result.date</td>
                        <td>@result.userId</td>
                        <td>@result.buId</td>
                        <td>
                            <a asp-controller="Result" asp-action="Detail" asp-route-resultId="@result.resultId" class="btn btn-sm btn-info text-white">
                                Detail
                            </a>
                        </td>
                    </tr>
                    Index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No Result available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>