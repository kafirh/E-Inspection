@model List<MachineInspection.Application.DTO.MachineDto>

@{
    ViewData["Title"] = "Machine List";
    int Index = 1;
}

<div class="container mt-4">
    <h2 class="text-start mb-4">Machine List</h2>
    <!-- Tombol Create & Form Search -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <!-- Button Create -->
        <a asp-controller="Machine" asp-action="Create" class="btn btn-primary">+ Create Machine</a>

        <!-- Form Search -->
        <form class="d-flex" asp-controller="Machine" asp-action="Index" method="get">
            <input type="text" name="search" class="form-control me-2" placeholder="Search machine..." />
            <button type="submit" class="btn btn-outline-secondary">Search</button>
        </form>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>No</th>
                <th>Machine Name</th>
                <th>Machine Number</th>
                <th>Section</th>
                <th>Line</th>
                <th>BU</th>
                <th>Action </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var machine in Model)
                {
                    <tr>
                        <td>@Index</td>
                        <td>@machine.machineName</td>
                        <td>@machine.machineNumber</td>
                        <td>@machine.sectionName</td>
                        <td>@machine.line</td>
                        <td>@machine.buId</td>
                        <td>
                            <a asp-controller="Machine" asp-action="Detail" asp-route-machineId="@machine.machineId" class="btn btn-sm btn-info text-white">
                                Detail
                            </a>
                        </td>
                    </tr>
                    Index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No machines available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
